datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
  binaryTargets   = ["native", "linux-arm64-openssl-3.0.x"]
}

generator dbml {
  provider = "prisma-dbml-generator"
}

generator prisma-class-generator {
  provider                 = "prisma-class-generator"
  dryRun                   = "false"
  output                   = "dtos"
  useSwagger               = "true"
  makeIndexFile            = "true"
  separateRelationFields   = "true"
  clientImportPath         = "@prisma/client"
  useNonNullableAssertions = "false"
  preserveDefaultNullable  = "false"
}

// -------------------------------- Models ------------------------------
model User {
  id                 Int          @id @default(autoincrement())
  email              String       @unique
  password           String
  fullName           String?
  phoneNumber        String?
  status             UserStatus   @default(Inactive)
  dob                DateTime?
  role               UserRole
  gender             Gender       @default(Other)
  address            String?
  imageLink          String?
  lastActive         DateTime?
  forceResetPassword Boolean      @default(false)
  language           UserLanguage @default(En)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  deletedAt          DateTime?

  Business Business?
}

model Business {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  ExecutiveCompany ExecutiveCompany[]
  User             User               @relation(fields: [userId], references: [id])
}

model ExecutiveCompany {
  id         Int       @id @default(autoincrement())
  businessId Int?
  name       String
  geography  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  Campaign        Campaign[]
  Business        Business?         @relation(fields: [businessId], references: [id])
  ExecutiveUpload ExecutiveUpload[]
  ExecutivePerson ExecutivePerson[]
  EnrichmentRaw   EnrichmentRaw[]
}

model ExecutiveUpload {
  id                 Int       @id @default(autoincrement())
  fileName           String
  filePath           String
  quantity           Int
  storageLink        String?
  isSaved            Boolean   @default(false)
  isEnriched         Boolean   @default(false)
  // type ExecutiveUploadType // person or company
  executiveCompanyId Int
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime?

  ExecutiveCompany ExecutiveCompany  @relation(fields: [executiveCompanyId], references: [id])
  ExecutivePerson  ExecutivePerson[]
}

// Personal who created by target upload (csv)
model ExecutivePerson {
  id                 Int              @id @default(autoincrement())
  firstName          String
  lastName           String
  fullName           String
  linkedinProfileUrl String?
  email              String
  phoneNumber        String?
  executiveCompanyId Int
  executiveUploadId  Int?
  enrichmentStatus   EnrichmentStatus @default(NoEnrichment)
  intentScore        Float            @default(0)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  deletedAt          DateTime?

  Footprint          Footprint[]
  Enrichment         PersonEnrichment[]
  IdentifyResolution IdentifyResolution[]
  ExecutiveCompany   ExecutiveCompany     @relation(fields: [executiveCompanyId], references: [id])
  ExecutiveUpload    ExecutiveUpload?     @relation(fields: [executiveUploadId], references: [id])

  @@unique([email, fullName, executiveCompanyId])
}

model PersonEnrichment {
  id                Int       @id @default(autoincrement())
  fullName          String?
  gender            String?
  email             String?
  emailStatus       String?
  linkedin          String?
  phoneNumber       String?
  address           String?
  companyAddress    String?
  department        String?
  position          String?
  companyName       String?
  executivePersonId Int
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?

  ExecutivePerson ExecutivePerson @relation(fields: [executivePersonId], references: [id])
}

// save enrichment data from peopledatalab
// system read only
model EnrichmentRaw {
  id                 Int            @id @default(autoincrement())
  executiveCompanyId Int?
  request            Json
  response           Json?
  type               EnrichmentType
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  deletedAt          DateTime?

  ExecutiveCompany ExecutiveCompany? @relation(fields: [executiveCompanyId], references: [id])
}

model Footprint {
  id            Int              @id @default(autoincrement())
  action        FootprintAction
  element       FootprintElement
  actionDetail  String? //
  deviceUsed    String? // e.g., Laptop, Smartphone
  priorityLevel PriorityLevel?
  intentScore   Float            @default(0)
  confidence    Float            @default(0)
  personId      Int?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  deletedAt     DateTime?

  ExecutivePerson ExecutivePerson? @relation(fields: [personId], references: [id])
}

model IdentifyResolution {
  id                Int       @id @default(autoincrement())
  personId          Int
  email             String?
  emailHash         String?
  ip                String?
  uid               String?
  deviceFingerprint String?
  confidence        Float     @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?

  ExecutivePerson ExecutivePerson @relation(fields: [personId], references: [id])
}

model Campaign {
  id                 Int              @id @default(autoincrement())
  campaignName       String
  budget             Float
  spend              Float            @default(0)
  remaining          Float
  reached            Float            @default(0) // percentage
  startDate          DateTime
  endDate            DateTime?
  status             CampaignStatus
  objective          CampainObjective
  description        String?
  geography          Json // string[]
  role               Json // string[]
  executiveCompanyId Int
  campaignMetricId   Int              @unique
  isBugdetByChannel  Boolean          @default(false) // maybe enum
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  deletedAt          DateTime?

  CampaignMetric   CampaignMetric     @relation(fields: [campaignMetricId], references: [id])
  ExecutiveCompany ExecutiveCompany   @relation(fields: [executiveCompanyId], references: [id])
  CampaignStrategy CampaignStrategy[]
}

model CampaignStrategy {
  id               Int                     @id @default(autoincrement())
  status           CampaignStatus
  channel          CampaignStrategyChannel
  budget           Float
  format           StrategyAdFormat // single image, single video
  creativeLink     String? //  image link
  content          String?
  startDate        DateTime?
  finishDate       DateTime?
  campaignId       Int
  campaignMetricId Int
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt
  deletedAt        DateTime?

  Campaign       Campaign       @relation(fields: [campaignId], references: [id])
  CampaignMetric CampaignMetric @relation(fields: [campaignMetricId], references: [id])
}

model CampaignMetric {
  id            Int       @id @default(autoincrement())
  spend         Float?
  account       Int?
  impressions   Int?
  avgTimeOnSite Float?
  performance   Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  Campaign         Campaign?
  CampaignStrategy CampaignStrategy[]
}

// -------------------------------- Enums -------------------------------
enum UserRole {
  Admin
  User
  Business
}

enum UserStatus {
  Active
  Inactive
  Closed
}

enum Gender {
  Male
  Female
  Other
}

enum UserLanguage {
  En
  Vn
}

enum FootprintAction {
  Click
  Download
  View
  SubmitForm
  Visit
  Share
}

enum EnrichmentType {
  Person
  Company
}

enum EmailStatus {
  Valid
  Invalid
}

enum EnrichmentStatus {
  InProgress
  Completed
  Failed
  NoEnrichment
}

enum PriorityLevel {
  HIGH
  MEDIUM
  LOW
}

enum FootprintElement {
  Ads
  Button
  Link
  Form
  Page
  Content
  Image
  Cart
  SocialMedia
}

enum CampaignStatus {
  Active
  Suspended
  Pending
  WaitingToLaunch
  Completed
  Paused
  Cancelled
}

enum CampainObjective {
  Nurture
  Engagement
  Awareness
}

enum CampaignStrategyChannel {
  GoogleAds
  LinkedIn
  DV360
}

enum StrategyAdFormat {
  SingleImage
  SingleVideo
}
